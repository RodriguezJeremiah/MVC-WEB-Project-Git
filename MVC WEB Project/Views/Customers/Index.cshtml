@model IEnumerable<MVC_WEB_Project.Models.Customer>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create"  class="btn btn-primary">Add a Customer</a>
</p>    
<div class="text-center">
    <h1 class="display-4">List of Customers</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-primary">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-info">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>