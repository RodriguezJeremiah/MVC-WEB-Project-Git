<script>
    function formatDate(date) {
        var d = new Date(date),
            month = '' + (d.getMonth() + 1),
            day = '' + d.getDate(),
            year = d.getFullYear();

        if (month.length < 2)
            month = '0' + month;
        if (day.length < 2)
            day = '0' + day;

        return [year, month, day].join('-');
    }
    document.getElementById('orderDateInput').value = formatDate(new Date());

    function removeItem(index) {
        var row = document.getElementById("orderItemsTable").getElementsByTagName('tr')[index];
        row.remove();
        updateTotalAmount();
    }

    function updateTotalAmount() {
        console.log("hello");
        var tbody = document.getElementById("orderItemsTable");
        if (!tbody) {
            console.error("orderItemsTable not found");
            return;
        }

        var rows = tbody.getElementsByTagName('tr');
        console.log("Rows:", rows);

        var totalAmount = 0;

        for (var i = 0; i < rows.length; i++) {
            var quantityInput = rows[i].querySelector('input[name$=".Quantity"]');
            var priceInput = rows[i].querySelector('input[name$=".Price"]');
            var totalAmountInput = rows[i].querySelector('input[name$=".TotalAmount"]');

            if (!quantityInput || !priceInput || !totalAmountInput) {
                console.error("Input elements not found in row", i);
                continue;
            }

            var quantity = parseInt(quantityInput.value) || 0;
            var price = parseFloat(priceInput.value) || 0;

            var itemTotalAmount = quantity * price;
            totalAmountInput.value = itemTotalAmount.toFixed(2);

            totalAmount += itemTotalAmount;
        }

        document.getElementById("totalAmountInput").value = totalAmount.toFixed(2);
    }

    var quantityInputs = document.querySelectorAll('input[name$=".Quantity"]');
    quantityInputs.forEach(function (input) {
        input.addEventListener('input', function () {
            updateTotalAmount();
        });
    });
</script>


